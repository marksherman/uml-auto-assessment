<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="net.sf.webcat.eclipse.cxxtest.extraProjectOptions">
      <extraProjectOptions
            id="net.sf.webcat.eclipse.cxxtest.bfd.stackTracingOptions">
         <optionSets
               version="1.5.0">
            <optionSet>
               <runnerIncludes
                     path="/runner-include">
                  <includeFile
                        path="dereferee-src/gcc_bfd_platform.cpp">
                  </includeFile>
               </runnerIncludes>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-finstrument-functions">
                     </item>
                  </splitStringOption>
               </tool>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.linker">
                  <librariesOption
                        id="gnu.cpp.link.option.libs">
                     <item
                           value="intl">
                     </item>
                     <item
                           value="iberty">
                     </item>
                     <item
                           value="bfd">
                     </item>
                  </librariesOption>
               </tool>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
               </enablement>
            </optionSet>
         </optionSets>
         <optionSets
               version="1.6.0">
            <optionSet>
               <runnerIncludes
                     path="/runner-include">
                  <includeFile
                        path="dereferee-src/gcc_bfd_platform.cpp">
                  </includeFile>
               </runnerIncludes>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-finstrument-functions">
                     </item>
                  </splitStringOption>
               </tool>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
               </enablement>
            </optionSet>
            <optionSet>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.linker">
                  <librariesOption
                        id="gnu.cpp.link.option.libs">
                     <item
                           value="bfd">
                     </item>
                  </librariesOption>
               </tool>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
                  <test
                        args="net.sf.webcat.eclipse.cxxtest.bfd.options.HasLibBfdCondition"
                        property="net.sf.webcat.eclipse.cxxtest.evaluatePredicate"
                        value="true">
                  </test>
               </enablement>
            </optionSet>
            <optionSet>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.linker">
                  <librariesOption
                        id="gnu.cpp.link.option.libs">
                     <item
                           value="intl">
                     </item>
                  </librariesOption>
               </tool>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
                  <test
                        args="net.sf.webcat.eclipse.cxxtest.bfd.options.NeedsLibIntlCondition"
                        property="net.sf.webcat.eclipse.cxxtest.evaluatePredicate"
                        value="true">
                  </test>
               </enablement>
            </optionSet>
            <optionSet>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.linker">
                  <librariesOption
                        id="gnu.cpp.link.option.libs">
                     <item
                           value="iberty">
                     </item>
                  </librariesOption>
               </tool>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
                  <test
                        args="net.sf.webcat.eclipse.cxxtest.bfd.options.NeedsLibIbertyCondition"
                        property="net.sf.webcat.eclipse.cxxtest.evaluatePredicate"
                        value="true">
                  </test>
               </enablement>
            </optionSet>
         </optionSets>
      </extraProjectOptions>
   </extension>
   <extension
         point="net.sf.webcat.eclipse.cxxtest.stackTraceDependencyCheck">
      <dependencyCheck
            class="net.sf.webcat.eclipse.cxxtest.bfd.CheckForRequiredLibraries">
      </dependencyCheck>
   </extension>

</fragment>
