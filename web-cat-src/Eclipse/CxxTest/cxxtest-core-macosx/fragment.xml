<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="net.sf.webcat.eclipse.cxxtest.extraProjectOptions">
      <extraProjectOptions
            id="net.sf.webcat.eclipse.cxxtest.macosx.stackTracingOptions">
         <optionSets
               version="1.5.0">
            <optionSet>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
               </enablement>
               <runnerIncludes
                     path="/runner-include">
                  <includeFile
                        path="dereferee-src/gcc_macosx_platform.cpp">
                  </includeFile>
               </runnerIncludes>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-finstrument-functions">
                     </item>
                     <item
                           value="-gstabs">
                     </item>
                  </splitStringOption>
               </tool>
            </optionSet>
         </optionSets>
         <optionSets
               version="1.6.0">
            <optionSet>
               <enablement>
                  <test
                        property="net.sf.webcat.eclipse.cxxtest.configurationName"
                        value="Debug">
                  </test>
                  <test
                        args="traceStack,boolean"
                        property="net.sf.webcat.eclipse.cxxtest.preference"
                        value="true">
                  </test>
               </enablement>
               <runnerIncludes
                     path="/runner-include">
                  <includeFile
                        path="dereferee-src/gcc_macosx_platform.cpp">
                  </includeFile>
               </runnerIncludes>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-finstrument-functions">
                     </item>
                     <item
                           value="-gstabs">
                     </item>
                  </splitStringOption>
               </tool>
            </optionSet>
            <optionSet>
               <enablement>
                  <not>
                     <systemTest
                           property="osgi.arch"
                           value="ppc">
                     </systemTest>
                  </not>
               </enablement>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-arch">
                     </item>
                     <item
                           value="i386">
                     </item>
                  </splitStringOption>
               </tool>
               <tool
                     superClassId="cdt.managedbuild.tool.macosx.cpp.linker">
                  <splitStringOption
                        id="macosx.cpp.link.option.flags">
                     <item
                           value="-arch">
                     </item>
                     <item
                           value="i386">
                     </item>
                  </splitStringOption>
               </tool>
            </optionSet>
            <optionSet>
               <enablement>
                  <systemTest
                        property="osgi.arch"
                        value="ppc">
                  </systemTest>
               </enablement>
               <tool
                     superClassId="cdt.managedbuild.tool.gnu.cpp.compiler">
                  <splitStringOption
                        id="gnu.cpp.compiler.option.other.other">
                     <item
                           value="-arch">
                     </item>
                     <item
                           value="ppc">
                     </item>
                  </splitStringOption>
               </tool>
               <tool
                     superClassId="cdt.managedbuild.tool.macosx.cpp.linker">
                  <splitStringOption
                        id="macosx.cpp.link.option.flags">
                     <item
                           value="-arch">
                     </item>
                     <item
                           value="ppc">
                     </item>
                  </splitStringOption>
               </tool>
            </optionSet>
         </optionSets>
      </extraProjectOptions>
   </extension>

</fragment>
